.musicplayer
  position                    absolute
  height                      30px
  line-height                 1em

  > div
    display                   inline-block
    padding                   8px 11px 8px 11px
    background-color          #fff

  &:hover .hide
    opacity                   1
    background-color          #fff
    display                   inline-block

  .hide
    background-color          transparent
    transition                all 0.5s ease-out
    opacity                   0

  .text
    line-height               1em

  .playbtn
    height                    30px
    width                     30px
